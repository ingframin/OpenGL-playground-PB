{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-DGLEW_STATIC",
                "main.cpp",
                "glew.c",
                "BallShader.cpp",
                "math_utils.cpp",
                "Model.cpp",
                "ShaderProgram.cpp",
                "Display.cpp",
                "-mfpmath=sse", //
                "-mmmx", "-msse", "-msse2",
                "-o./build/game.exe",
                "-I./include",
                "-L./lib",
                "-lOpengl32",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_image",
                "-lSDL2_mixer"
            ]
        }
    ]
}